<view class="page">
    <view class="weui-msg">
        <view class="weui-msg__icon-area">
            <icon type="waiting" size="64"></icon>
        </view>
        <view class="weui-msg__text-area">
            <view class="weui-msg__title">智力</view>
            <view class="weui-msg__desc">{{bill}}</view>
        </view>
        <view class="weui-msg__tips-area">
            <view class="weui-msg__tips">点击确认提交进行下一步</view>
        </view>
        <view class="weui-msg__opr-area">
            <view class="weui-btn-area">
                <button class="weui-btn" type="primary" bindtap="confirmPay">确认提交</button>
            </view>
        </view>
    </view>
</view>
<wux-keyboard id="wux-keyboard" />