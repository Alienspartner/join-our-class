<view class="page">
    <view class="weui-form">
      <view class="weui-form__text-area">
        <view class="weui-form__title">Input Your Name</view>
        <view class="weui-form__desc">填写姓名</view>
      </view>
      <view class="weui-form__control-area">
        <view class="weui-cells__group weui-cells__group_form">
            <view class="weui-cells__title">Name</view>
            <view class="weui-cells weui-cells_form">
              <view class="weui-cell">
                <view class="weui-cell__hd"><label class="weui-label">姓名</label></view>
                <view class="weui-cell__bd">
                    <input class="weui-input"  placeholder="请输入姓名" bindinput="changeName"/>
                </view>
              </view>
            </view>
        </view>
      </view>
      <view class="weui-form__opr-area">
        <button type="primary" bindtap="next">下一步</button>
      </view>
      <view class="weui-form__tips-area">
        <view class="weui-form__tips">
          点击下一步继续
        </view>
      </view>
    </view>
</view>

