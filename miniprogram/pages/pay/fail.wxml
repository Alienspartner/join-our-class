<view class="page">
    <view class="weui-msg">
        <view class="weui-msg__icon-area">
            <icon type="warn" size="64"></icon>
        </view>
        <view class="weui-msg__text-area">
            <view class="weui-msg__title">支付失败</view>
            <view class="weui-msg__desc">Network issue</view>
        </view>
        <view class="weui-msg__tips-area">
            <view class="weui-msg__tips">网络出现错误，请检查网络设置，查看智力及用户信息是否发生改变，及时联系管理员解决问题</view>
        </view>
        <view class="weui-msg__opr-area">
            <view class="weui-btn-area">
                <button class="weui-btn" type="default" bindtap="back">返回</button>
            </view>
        </view>
    </view>
</view>
