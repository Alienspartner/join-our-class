<view class="page">
    <view class="weui-form">
      <view class="weui-form__text-area">
      <image src="/images/iq.png" style="width: 30px; height: 30px;"></image>
        <view class="weui-cells__title">剩余智力</view>
        <view class="weui-form__title">{{balance}}</view>
      </view>
      <view class="weui-form__control-area">
        <view class="weui-cells__group weui-cells__group_form">
            <view class="weui-cells__title">IQ Code</view>
            <view class="weui-cells weui-cells_form">
              <view class="weui-cell">
                <view class="weui-cell__hd"><label class="weui-label">智力码</label></view>
                <view class="weui-cell__bd">
                    <input class="weui-input" placeholder="请输入智力码" bindinput="changeCode" value="{{value}}"/>
                </view>
              </view>
            </view>
        </view>
      </view>
      <view class="weui-form__opr-area">
        <button type="primary" bindtap="confirm">提升</button>
      </view>
      <view class="weui-form__tips-area">
        <view class="weui-form__tips" bindtap="taobao">
          获取智力码
        </view>
      </view>
    </view>
</view>
