<view class="page">
    <view class="weui-form">
      <view class="weui-form__text-area">
        <view class="weui-form__title">Area Setting</view>
        <view class="weui-form__desc">设置默认地区</view>
      </view>
      <view class="weui-form__control-area">
        <view class="weui-cells__group weui-cells__group_form">
            <view class="weui-cells__title">Area</view>
            <view class="weui-cells weui-cells_form">
              <view class="weui-cell">
                <view class="weui-cell__hd"><label class="weui-label">地区</label></view>
                <view class="weui-cell__bd">
                    <picker class="weui-input" mode="region" bindchange="changeArea">{{area[0]}}/{{area[1]}}/{{area[2]}}</picker>
                </view>
              </view>
            </view>
        </view>
      </view>
      <view class="weui-form__opr-area">
        <button type="primary" bindtap="confirm">保存</button>
      </view>
    </view>
</view>

